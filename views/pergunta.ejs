<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('partials/header.ejs') %>
</head>

<body>
    <header>
        <%- include('partials/navbar.ejs') %>
    </header>

    <div class="container">
        <div class="card m-3">
            <div class="card-body">
                <h2>
                    <%= pergunta.titulo %>
                </h2>
            </div>

            <div class="card-footer">
                <p>
                    <%= pergunta.descricao %>
                </p>
            </div>
        </div>


        <div class="m-3">
            <form action="/responder" method="POST">
                <textarea name="resposta" class="form-control" placeholder="Digite sua resposta"></textarea>

                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">

                <button type="submit" class="btn btn-primary m-3">
                    Responder
                </button>

            </form>

        </div>

        <hr>

        <div class="m-3">
            <h4>Respostas anteriores:</h4>
            <% respostas.forEach(function(resposta) { %>
                <br>

                <div class="card">
                    <div class="card-body">
                        <p>
                            <%= resposta.corpo %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

</body>

<footer>
    <%- include('partials/footer.ejs') %>
</footer>

</html>