<body>
    <header>
        <!--INCLUI PARTIALS DE NAVBAR-->
        <%- include ('partials/navbar.ejs') %>
    </header>


    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Faça uma pergunta</h3>
            </div>

            <div class="card-body">
                <form action="/salvarPergunta" method="POST">
                    <label for="">Titulo</label>
                    <input name="titulo" type="text" class="form-control" placeholder="Titulo">

                    <br>

                    <label for="">Descrição</label>
                    <textarea name="descricao" class="form-control" placeholder="Descreva sua pergunta"></textarea>

                    <br>

                    <button class="btn btn-primary">
                        Enviar
                    </button>
                </form>
            </div>
        </div>
    </div>


</body>

